<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
        <persistence-unit name="INEP" transaction-type="RESOURCE_LOCAL">
                <class>br.unb.cic.bd.dadosINEP.model.Aluno</class>
                <class>br.unb.cic.bd.dadosINEP.model.Curso</class>
                <class>br.unb.cic.bd.dadosINEP.model.Docente</class>
                <class>br.unb.cic.bd.dadosINEP.model.Local_oferta</class>
                <class>br.unb.cic.bd.dadosINEP.model.Ies</class>
                
 <properties>
  <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
  <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/INEP" />
  <property name="javax.persistence.jdbc.user" value="postgres" />
  <property name="javax.persistence.jdbc.password" value="test" />

  <!-- EclipseLink should create the database schema automatically -->
  <property name="eclipselink.ddl-generation" value="create-tables" />
  <property name="eclipselink.ddl-generation.output-mode" value="database" />
 </properties>

        </persistence-unit>
</persistence>